<% if @trip.owner == current_user %>
<div class="position-relative">
<div class="position-absolute top-0 end-0 text-center">
 <%= button_to "Edit Post", edit_trip_post_path(@trip,@post), method: :get, class: 'btn btn-secondary mb-3' %>
 <%= button_to "Delete Post", trip_post_path(@trip,@post), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure that you want to delete this post?"}%>
</div>
</div>
<%end%>
<h1 class="display-3 mb-4"><%=@post.title%></h1>
<p class="lead">
<%= @post.content%>
</p>
<div class="container mt-5">
    <div class="row d-flex justify-content-left">
        <div class="">
            <div class="headings d-flex justify-content-between align-items-center mb-3">
                <h5>Comments</h5>
            </div>
            <!-- Loop Start here -->
            <div class="card p-3 mt-2">
                <div class="d-flex justify-content-between align-items-center">
                    <div class="user d-flex flex-row align-items-center"> <span><small class="font-weight-bold text-primary">USERNAME HERE </small> <br>
                    <small class="font-weight-bold">CONTENT HERE</small></span> </div>
                </div>
                <div class="action d-flex justify-content-between mt-2 align-items-center">
                    <div class="reply px-4"> <small><%= link_to 'LINK TO EDIT HERE' %></small> <span class="dots"></span> <small> | </small> <span class="dots"></span> <small><%= link_to 'LINK TO DELETE HERE' %></small> </div>
                </div>
            </div>
            <!-- Loop End Here -->
        </div>
    </div>
</div>