<div class="jumbotron">
  <h1 class="display-4 text-center ">Welcome to Trippin</h1>
  <% if !logged_in? %>
    <hr class="my-4">
    <div class="d-flex flex-column">
    <div class="text-center">
      <div class="mb-3">Start using Trippin by logging in or creating an account below!</div>
      <div>
        <div class="row-sm mb-3"><%= button_to "Login", login_path, method: :get, class: 'btn btn-primary btn-lg'%></div>
        <div class="row-sm mb-3"><%= button_to "Sign Up", new_user_path, method: :get, class: 'btn btn-primary btn-lg'%></div>
        <div class="row-sm mb-3"><%= button_to "Login With Github", '/auth/github', method: :post, class: 'btn btn-primary btn-lg'%></div>
      </div>
    </div>
</div>
  <%end%>