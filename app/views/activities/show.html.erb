<div class="position-relative">
  <div class="position-absolute top-0 start-0">
  <%= button_to 'Back', trip_path(@trip), method: :get, class: 'btn btn-outline-primary'%>
  </div>
</div>
<div class="position-relative">
<div class="position-absolute top-0 end-0 text-center">
 <%= button_to "Edit Activity", edit_trip_activity_path(@trip,@activity), method: :get, class: 'btn btn-secondary mb-3' %>
<% if @trip.owner == current_user %>
 <%= button_to "Delete Activity", trip_activity_path(@trip,@activity), method: :delete, class: 'btn btn-danger', data: {confirm: "Are you sure that you want to delete this activity?"}%>
</div>
<%end%>
</div>
<h1 class="display-3 mb-4 text-center"><%=@activity.name%></h1>
<h4 class="display-7 mb-4 text-center "><%=@activity.location%> | <%= @activity.act_date %> | <%= @activity.print_cost %></h4>
<p class="lead">
<%= @activity.description%>
</p>