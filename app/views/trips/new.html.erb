<div class="d-flex p-2 justify-content-center">
<%= form_for @trip do |f| %>
<h1 class="text-center mb-4 display-3">Create New Trip</h1>
  <div class="mb-3">
  <%=f.label :name, class: 'form-label'%>
  <%=f.text_field :name, class: 'form-control'%>
  </div>
  <div class="mb-3">
  <%=f.label :location, class: 'form-label'%>
  <%=f.text_field :location, class: 'form-control'%>
  </div>
  <div class="mb-3 row text-center">
  <div class="col-sm">
  <%=f.label :start_date, class: 'form-label' %>
  <%=f.date_field :start_date, class: 'form-control' %>
  </div>
  <div class="col-sm">
  <%=f.label :end_date, class: 'form-label' %>
  <%=f.date_field :end_date, class: 'form-control'%>
  </div>
  </div>
  <br>
  <br>
  <h2 class="display-6">Add an Activity to Your Trip</h2>
  <%= f.fields_for :activity do |act|%>
    <div class='mb-3'>
    <%= act.label :name, class: 'form-label' %>
    <%= act.text_field :name, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= act.label :description, class: 'form-label' %>
    <%= act.text_area :description, class: 'form-control' %>
    </div>
    <div class="mb-3 row text-center">
    <div class="col-sm">
    <%= act.label :cost, class: 'form-label' %>
    <%= act.text_field :cost, class: 'form-control', "data-type": "currency" %>
    </div>
    <div class="col-sm">
    <%= act.label :date, class: 'form-label' %>
    <%= act.date_field :date, class: 'form-control' %>
    </div>
    </div>
  <%end%>
  <!-- Subform for Activity Goes here-->
  <br>
  <h2 class="display-6">Add a Post to Your Trip</h2>
  <!-- Subform for Post Goes here-->
    <%= f.fields_for :post do |act|%>
    <div class="mb-3">
    <%= act.label :title, class: 'form-label' %>
    <%= act.text_field :title, class: 'form-control' %>
    </div>
    <div class="mb-3">
    <%= act.label :content, class: 'form-label' %>
    <%= act.text_area :content, class: 'form-control' %>
    </div>
  <%end%>
  <br>
  <div class='text-center'>
  <%=f.submit class:"btn btn-primary"%>
  </div>
<%end%>
</div>